<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id_link}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="titulo" id="" class="form-control" placeholder="Titulo" value="{{link.titulo}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" id="" class="form-control" placeholder="URL" value="{{link.url}}">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="3" class="form-control" placeholder="Descripcion" >{{link.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>